<?xml version="1.0" ?>
<project name="Antlr_v4_Custom" default="build">
	<property name="MobTalker2.libraries.location" value="${basedir}/../../lib" />

	<property name="src" value="${basedir}/src" />
	<property name="bin" value="${basedir}/bin" />

	<target name="build">
		<delete includeemptydirs="true">
			<fileset dir="${bin}" erroronmissingdir="false" />
		</delete>
		<mkdir dir="${bin}" />

		<javac srcdir="${src}" destdir="${bin}" source="6" target="6" includeantruntime="false" />

		<!-- Build the jar -->
		<zip destfile="${MobTalker2.libraries.location}/Antlr4-Custom.jar">
			<fileset dir="${bin}" />
		</zip>

		<delete includeemptydirs="true">
			<fileset dir="${bin}" />
		</delete>
	</target>

</project>
